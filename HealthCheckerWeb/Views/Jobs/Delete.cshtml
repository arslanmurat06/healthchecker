@using HealthChecker.Contracts.DTOs
@using HealthChecker.Contracts
@model JobDTO

<form method="post" asp-action="Delete">

    <input asp-for="Id" hidden />
	<div class ="container p-3">

			<h2 class="text-primary">
				Delete Job
			</h2>

    <div class="row pt-4">
        <div  class="mb-3">
            <label asp-for="Name" style="padding-bottom:5px">Job Name</label>
			<input asp-for="Name" disabled class ="form-control"/>
        </div>
        <div  class="mb-3">
            <label asp-for="TargetURL" style="padding-bottom:5px">Target URL</label>
				<input asp-for="TargetURL" disabled class ="form-control"/>
        </div>
    </div>

	 <div class="row pt-4">
        <div class="col-2">
            <label asp-for="TriggerInterval" style="padding-bottom:5px">Job Interval</label>
			<input asp-for="TriggerInterval"disabled class ="form-control"/>
        </div>

		  <div class="col-4">
            <label asp-for="TriggerType" style="padding-bottom:5px">Interval Type</label>
			<select class="form-control" disabled asp-for="TriggerType"  asp-items="Html.GetEnumSelectList<IntervalEnum>()">
				<option value"">Please choose interval type</option>
			</select>
        </div>
    </div>

	<div class="row pt-4">
        <div class="col-6">
           <button type="submit" class="btn btn-danger style="width:150px">Delete</button>
		<a asp-controller="Jobs" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to jobs</a>
        </div>
    </div>
</div>

</form>
